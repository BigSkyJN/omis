<!-- 
  - Unit manager review configuration.
  -
  - Author: Josh Divine
  -->
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.1.xsd">
        
        <!-- Services -->
        
        <bean id="unitManagerReviewService"
        	class="omis.unitmanagerreview.service.impl.UnitManagerReviewServiceImpl">
        	<constructor-arg name="unitManagerReviewDelegate" ref="unitManagerReviewDelegate"/>
        	<constructor-arg name="documentDelegate" ref="documentDelegate"/>
        	<constructor-arg name="documentTagDelegate" ref="documentTagDelegate"/>
        	<constructor-arg name="unitManagerReviewDocumentAssociationDelegate" ref="unitManagerReviewDocumentAssociationDelegate"/>
        </bean>        
        
        <!-- Report services -->
        
        <bean id="unitManagerReviewSummaryReportService"
        	class="omis.unitmanagerreview.report.impl.hibernate.UnitManagerReviewSummaryReportServiceHibernateImpl">
        	<constructor-arg name="sessionFactory" ref="sessionFactory"/>
        </bean>
        
        <!-- Delegates -->
        
        <bean id="unitManagerReviewDelegate"
        	class="omis.unitmanagerreview.service.delegate.UnitManagerReviewDelegate">
        	<constructor-arg name="unitManagerReviewDao" ref="unitManagerReviewDao"/>
        	<constructor-arg name="auditComponentRetriever" ref="auditComponentRetriever"/>
        	<constructor-arg name="unitManagerReviewInstanceFactory" ref="unitManagerReviewInstanceFactory"/>
        </bean>
        
        <bean id="unitManagerReviewDocumentAssociationDelegate"
        	class="omis.unitmanagerreview.service.delegate.UnitManagerReviewDocumentAssociationDelegate">
        	<constructor-arg name="unitManagerReviewDocumentAssociationDao" ref="unitManagerReviewDocumentAssociationDao"/>
        	<constructor-arg name="auditComponentRetriever" ref="auditComponentRetriever"/>
        	<constructor-arg name="unitManagerReviewDocumentAssociationInstanceFactory" ref="unitManagerReviewDocumentAssociationInstanceFactory"/>
        </bean>
        
        <!-- Data access objects -->
        
         <bean id="unitManagerReviewDao"
        	class="omis.unitmanagerreview.dao.impl.hibernate.UnitManagerReviewDaoHibernateImpl">
    		<constructor-arg name="entityName" value="omis.unitmanagerreview.domain.UnitManagerReview"/>
    		<constructor-arg name="sessionFactory" ref="sessionFactory"/>
  		</bean>
  		
  		<bean id="unitManagerReviewDocumentAssociationDao"
        	class="omis.unitmanagerreview.dao.impl.hibernate.UnitManagerReviewDocumentAssociationDaoHibernateImpl">
    		<constructor-arg name="entityName" value="omis.unitmanagerreview.domain.UnitManagerReviewDocumentAssociation"/>
    		<constructor-arg name="sessionFactory" ref="sessionFactory"/>
  		</bean>
  		
  		<!-- Instance factories -->
  		 
		<bean id="unitManagerReviewInstanceFactory"
			class="omis.instance.factory.hibernate.impl.InstanceFactoryHibernateImpl">
			<constructor-arg name="instanceFactoryDelegate" ref="instanceFactoryDelegate"/>
			<constructor-arg name="entityName" value="omis.unitmanagerreview.domain.UnitManagerReview"/>
		</bean>
		
		<bean id="unitManagerReviewDocumentAssociationInstanceFactory"
			class="omis.instance.factory.hibernate.impl.InstanceFactoryHibernateImpl">
			<constructor-arg name="instanceFactoryDelegate" ref="instanceFactoryDelegate"/>
			<constructor-arg name="entityName" value="omis.unitmanagerreview.domain.UnitManagerReviewDocumentAssociation"/>
		</bean>

  		 <!--Property editor factories -->
 		 
 		 <bean id="unitManagerReviewPropertyEditorFactory"
       		class="omis.beans.factory.impl.hibernate.PropertyEditorFactoryHibernateImpl">
 			<constructor-arg name="entityName" value="omis.unitmanagerreview.domain.UnitManagerReview"/>
 			<constructor-arg name="configuration" ref="hibernateConfiguration"/>
  			<constructor-arg name="dao" ref="unitManagerReviewDao"/>
		</bean>
		
		<bean id="unitManagerReviewDocumentAssociationPropertyEditorFactory"
       		class="omis.beans.factory.impl.hibernate.PropertyEditorFactoryHibernateImpl">
 			<constructor-arg name="entityName" value="omis.unitmanagerreview.domain.UnitManagerReviewDocumentAssociation"/>
 			<constructor-arg name="configuration" ref="hibernateConfiguration"/>
  			<constructor-arg name="dao" ref="unitManagerReviewDocumentAssociationDao"/>
		</bean>
		
		<!-- Document Beans -->
		
		<bean id="unitManagerReviewDocumentPersister" class="omis.document.io.impl.SimpleDocumentPersisterImpl">
			<constructor-arg name="fileLocator" ref="unitManagerReviewDocumentLocator"/>
		</bean>

		<bean id="unitManagerReviewDocumentRetriever" class="omis.document.io.impl.SimpleDocumentRetrieverImpl">
			<constructor-arg name="fileLocator" ref="unitManagerReviewDocumentLocator"/>
			<constructor-arg name="defaultFilename" value="notFound"/>
		</bean>

		<bean id="unitManagerReviewDocumentLocator" class="omis.io.impl.FileFromPathLocatorImpl">
			<constructor-arg name="path" value="${application.resource.path}\Documents\UnitManagerReviewDocuments"/>
		</bean>
		
		<bean id="unitManagerReviewDocumentRemover" class="omis.io.impl.SimpleFileRemoverImpl">
			<constructor-arg name="fileLocator" ref="unitManagerReviewDocumentLocator"/>
		</bean>
</beans>