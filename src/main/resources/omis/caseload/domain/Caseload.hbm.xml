<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="omis.caseload.domain">
	<typedef name="caseWorkCategory" class="org.hibernate.type.EnumType">
		<param name="enumClass">omis.caseload.domain.CaseworkCategory</param>
		<param name="useNamed">true</param>
		<param name="type">12</param>
	</typedef>
	<class entity-name="omis.caseload.domain.Caseload"
		proxy="omis.caseload.domain.Caseload" 
		name="omis.caseload.domain.impl.CaseloadImpl"
		table="`CASELOAD`">
		<id name="id" column="`ID`" type="java.lang.Long">
			<generator class="sequence">
				<param name="sequence">`CASELOAD_SEQ`</param>
			</generator>
		</id>
		<property name="category" column="`CASE_WORK_CATEGORY`" not-null="true" type="caseWorkCategory"/>
		<property name="name" column="`NAME`" type="java.lang.String" not-null="true"/>
		<many-to-one name="caseload" column="`CASELOAD_ID`" not-null="true" entity-name="omis.caseload.domain.Caseload"/>		
		<component name="creationSignature">
			<many-to-one name="userAccount" column="`CREATE_ACCOUNT_ID`" not-null="true"/>
			<property name="date" column="`CREATE_DATE`" not-null="true"/>
		</component>
		<component name="updateSignature">
			<many-to-one name="userAccount" column="`UPDATE_ACCOUNT_ID`" not-null="true"/>
			<property name="date" column="`UPDATE_DATE`" not-null="true"/>
		</component>
	</class>

	<query name="findCaseload"><![CDATA[
		select caseload
		from
			omis.caseload.domain.Caseload caseload
		where caseload.name = :name
		and caseload.category = :category
	]]></query>
	<query name="findCaseloadExcluding"><![CDATA[
		select caseload
		from	
			omis.caseload.domain.Caseload caseload
		where caseload.name = :name
		and caseload.category = :category
		and caseload != :caseload
	]]></query>
</hibernate-mapping>