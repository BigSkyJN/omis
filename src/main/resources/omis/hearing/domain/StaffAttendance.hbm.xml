<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="omis.hearing.domain">
	<class entity-name="omis.hearing.domain.StaffAttendance"
			proxy="omis.hearing.domain.StaffAttendance"
			name="omis.hearing.domain.impl.StaffAttendanceImpl"
			table="`STAFF_ATTENDED`">
			<id name="id" column="`ID`" type="java.lang.Long">
				<generator class="sequence">
					<param name="sequence">`STAFF_ATTENDED_SEQ`</param>
				</generator>
			</id>
			<many-to-one name="hearing" column="`HEARING_ID`" entity-name="omis.hearing.domain.Hearing" not-null="true"/>
			<many-to-one name="staff" column="`STAFF_ASSIGNMENT_ID`" entity-name="omis.staff.domain.StaffAssignment" not-null="true"/>
			<component name="creationSignature">
				<many-to-one name="userAccount" column="`CREATE_ACCOUNT_ID`" not-null="true"/>
				<property name="date" column="`CREATE_DATE`" not-null="true"/> 	
			</component>
			<component name="updateSignature">
				<many-to-one name="userAccount" column="`UPDATE_ACCOUNT_ID`" not-null="true"/>
				<property name="date" column="`UPDATE_DATE`" not-null="true"/>
			</component>
	</class>
	<query name="findStaffAttendance"><![CDATA[
		select staffAttendance
		from
			omis.hearing.domain.StaffAttendance staffAttendance
		where
			staffAttendance.hearing = :hearing
		and
			staffAttendance.staff = :staff
	]]></query>
	<query name="findStaffAttendanceExcluding"><![CDATA[
		select staffAttendance
		from
			omis.hearing.domain.StaffAttendance staffAttendance
		where
			staffAttendance.hearing = :hearing
		and
			staffAttendance.staff = :staff
		and
			staffAttendance != :staffAttendance
	]]></query>
	<query name="findStaffAttendanceByHearing"><![CDATA[
		select staffAttendance
		from
			omis.hearing.domain.StaffAttendance staffAttendance
		where
			staffAttendance.hearing = :hearing
	]]></query>
	
</hibernate-mapping>